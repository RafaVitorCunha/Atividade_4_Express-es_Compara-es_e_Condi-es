programa {
funcao inicio() {

inteiro nota1
inteiro nota2
inteiro media

escreva("* Qual foi sua primeira nota?.. ")
leia(nota1)
escreva("\n")
escreva("* Qual foi sua segunda nota?.. ")
leia(nota2)
escreva("\n")

media = nota1 + nota2
media = media / 2

se(media < 7){
escreva("* Reprovado(a)")
}

se(media >= 7 e media < 10){
escreva("* Aprovado(a)")
}

se(media == 10){
escreva("* Aprovado(a) com Distinção")
}

}
}
